{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "@emotion/core"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "target": "es5",
    "allowJs": true,
    "strict": false,
    "moduleResolution": "node",
    "module": "esnext",
    "pretty": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/**/*.tsx",
    "utils/*.tsx",
    "pages/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "deprecated"
  ]
}
